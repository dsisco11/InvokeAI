{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "InvokeAI :: Frontend",
			"type": "npm",
			"problemMatcher": [
				"$tsc",
				"$tsc-watch"
			],
			"script": "dev",
			"path": "invokeai/frontend/web",
			"detail": "Launch frontend with hot reloading",
			"isBackground": true,
			"group": {
				"name": "Frontend",
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": false
			},
		},
		{
			"label": "InvokeAI :: Backend",
			"type": "process",
			"problemMatcher": [],
			"detail": "Launch backend with hot reloading",
			"isBackground": true,
			"group": {
				"name": "Backend",
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": false
			},
			"options": {
				"cwd": "/opt/invokeai"
			},
			"command": "invokeai-web",
			"args": [
				// Access the app from anywhere on your local network
				"--host",
				"0.0.0.0",
				"--port",
				"9090",
				// Enable hot reloading
				"--dev_reload"
			]
		}
	]
}